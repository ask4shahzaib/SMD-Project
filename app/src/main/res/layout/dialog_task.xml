<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/job_request_layout"
    android:layout_width="340dp"
    android:background="@drawable/round_dialog"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="20dp"
        app:cardElevation="10dp"
        android:layout_gravity="center">



        <ImageView
            android:id="@+id/job_request_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/icon_worker"
            />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/dialog_task_name"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Task"
        android:textSize="15dp"
        android:textAllCaps="true"
        android:textStyle="bold"
        />
    <EditText
        android:background="@drawable/round_tasks"
        android:layout_width="match_parent"
        android:id="@+id/dialogue_task_detail"
        android:hint="Enter your task"
        android:gravity="center"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textSize="18sp"
        />
    <EditText
        android:background="@drawable/round_tasks"
        android:layout_width="match_parent"
        android:id="@+id/dialogue_Task_location"
        android:gravity="center"
        android:hint="Enter your Location"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textSize="18sp"
        />

    <Button
        android:layout_width="wrap_content"
        android:id="@+id/dialog_task_btn"
        android:width="200dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:text="Request"
        android:textColor="@color/ButtonText"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_button"
        android:layout_gravity="center_horizontal"
        />


</LinearLayout>